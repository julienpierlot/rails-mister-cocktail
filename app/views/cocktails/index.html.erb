<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Cocktails</h1>
      <ul class="cards-cocktails">
        <% @cocktails.each do |cocktail| %>
          <li class="card-cocktail">
            <div class="cocktail-info">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
          </li>
        <% end %>
      </ul>
      <%= link_to 'Create a cocktail!', new_cocktail_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
