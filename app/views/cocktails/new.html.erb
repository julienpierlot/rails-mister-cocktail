<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to '< Back to home', root_path, class: 'link-black' %>
      <h1>Create a cocktail</h1>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class:'btn-white' %>
      <% end %>
    </div>
  </div>
</div>
