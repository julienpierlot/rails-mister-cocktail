<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= @cocktail.name %></h1>
      <div class="cocktail-details">
        <p>Details:</p>
        <ul>
          <% @cocktail.ingredients.each do |ingredient| %>
          <li>
            <div class="cocktail-info">
              <p><%= ingredient.name %> <span> <%= @dose.description %></span></p>
              <%= link_to 'Delete', dose_path(Dose.find_by(ingredient: ingredient, cocktail: @cocktail)), method: :delete %>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
      <%= simple_form_for @dose do |f| %>
        <%= f.association :ingredient%>
        <%= f.association :cocktail, as: :hidden, input_html: { value: @cocktail.id } %>
        <%= f.input :description %>
        <%= f.submit 'Add ingredient' %>
      <% end %>
      <%= link_to 'Back to home', root_path %>
    </div>
  </div>
</div>
