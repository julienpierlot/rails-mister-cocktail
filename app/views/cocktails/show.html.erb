<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= @cocktail.name %></h1>
      <div class="cocktail-details">
        <p>Details:</p>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <li>
            <div class="cocktail-info">
              <p><%= dose.ingredient.name %> <span> <%= dose.description %></span></p>
              <%= link_to 'Delete', dose_path(dose), method: :delete %>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient, collection: Ingredient.all, input_html: { id: "ingredients-dropdown" }, include_hidden: false %>
        <%= f.input :description %>
        <%= f.submit 'Add ingredient' %>
      <% end %>
      <%= link_to 'Back to home', root_path %>
    </div>
  </div>
</div>
